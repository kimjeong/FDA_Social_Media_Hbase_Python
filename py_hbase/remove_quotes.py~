#!/usr/bin/python

import io
import sys
import time
from urllib2 import URLError
import twitter
import json
import oauth_login
import webbrowser
import requests
import os
import os.path
from xml.etree.ElementTree import Element, SubElement, tostring, fromstring
import struct
import base64



if __name__ == '__main__':
    fh = open('news_tweets_10_17_2013_ver2.txt','r')
    fw = open('news_tweets_10_17_2013_ver3.txt','w')
 
    for line in fh:
        if (line.find('created_at') < 0):
            ed_line = line.replace('\"}', '===')
            ed_line = ed_line.replace('t\"', '!==')
            ed_line = ed_line.replace('{\"', '$==')
            ed_line = ed_line.replace(':\"', '#==')
            ed_line = ed_line.replace('\"', '')
            ed_line = ed_line.replace('===', '\"}')
            ed_line = ed_line.replace('!==', 't\"')
            ed_line = ed_line.replace('$==', '{\"')
            ed_line = ed_line.replace('#==', ':\"')
            ed_line = ed_line.replace('', '')
            ed_line = ed_line.replace('\n', ' ')
            fw.write(ed_line)
        else:
            fw.write(line)

    fh.close()
    fw.close()
